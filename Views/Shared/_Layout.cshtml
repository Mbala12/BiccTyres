<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BICC TYRES &amp; MAG REPAIRS </title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BICC TYRES", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    if (Session["role"].ToString() == "admin")
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Check Stock", "Index", "Item")</li>
                            <li>@Html.ActionLink("Sales", "Index", "Order")</li>
                            <li>@Html.ActionLink("Other Services", "Index", "Service")</li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "User")</li>
                            <li>@Html.ActionLink("Add a User", "Registration", "User")</li>
                            <li>@Html.ActionLink("Logout", "LogOut", "User")</li>
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Check Stock", "Index", "Item")</li>
                            <li>@Html.ActionLink("Sales", "Index", "Order")</li>
                            <li>@Html.ActionLink("Other Services", "Index", "Service")</li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "User")</li>
                            <li>@Html.ActionLink("Logout", "LogOut", "User")</li>
                        </ul>
                    }
                }

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BICC TYRES &amp; MAG REPAIRS</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>