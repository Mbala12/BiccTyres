@model OnlineSales.ViewModels.UserViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>BICC TYRES & MAG REPAIRS</title>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<meta name="keywords" content="Art Sign Up Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates,
		Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />*@

    <link href="~/Content/login/css/style.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/login/css/fontawesome-all.css" rel="stylesheet" />

    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

</head>

<body>
    <h1>BiccTyres &amp; Mag Repairs Sign In</h1>
    <div class=" w3l-login-form">
        <h2>Sign In Here</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class=" w3l-form-group">
                <label>Email Address:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @type = "email", @class = "form-control", @placeholder = "Email Address", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class=" w3l-form-group">
                <label>Password:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @class = "form-control", @placeholder = "Password", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="forgot">
                <a href="">@Html.ActionLink("Forgot Password ?","ForgotPassword")</a>
                @*<p><input type="checkbox">Remember Me</p>*@
            </div>
            <button type="submit">Sign In</button>
        }
    </div>
    @*<p class="w3l-register-p">Don't have an account ?<a href="" class="register">@Html.ActionLink(" Sign Up", "Registration")</a></p>*@
    <p class="w3l-register-p"><a href="" class="register">@Html.ActionLink(" Back to Home", "index", "Home")</a></p>
    <footer>
        <p class="copyright-agileinfo">
            &copy; @DateTime.Now.Year Bicc Tyres &amp; Mag Repairs. All Rights Reserved | Design by
            <a href="http://www.softechapoulah.com" target="_blank">Apoulah</a>
        </p>
    </footer>

</body>
</html>



